<UserControl xmlns:Controls="clr-namespace:Microsoft.Phone.Maps.Controls;assembly=Microsoft.Phone.Maps"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:edc="clr-namespace:Microsoft.Expression.Controls;assembly=Microsoft.Expression.Drawing"  x:Class="Zengo.PinsOnMap.App.Controls.PinOnMap"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="160" d:DesignWidth="160">
    
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!--The text above the pin-->
        <Border Background="#66000000">
            <TextBlock Margin="10" Name="TextPin" Grid.Row="0" TextWrapping="Wrap" Text="click time" Foreground="#FFFFFDFD" TextAlignment="Center" FontSize="20"/>
        </Border>

        <!--The pin-->
        <Image Name="ImagePlayer" Source="/Assets/pin.png" Grid.Row="1"/>

    </Grid>

</UserControl>